<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_image"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/colorPrimaryDark"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/setting_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        tools:text="@string/display_name" />

    <TextView
        android:id="@+id/setting_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_display_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textColor="@color/colorAccent"
        android:textSize="14sp"
        tools:text="@string/default_status" />

    <Button
        android:id="@+id/setting_change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_status"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:background="@android:color/white"
        android:paddingEnd="25dp"
        android:paddingStart="25dp"
        android:text="CHANGE IMAGE"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:id="@+id/setting_change_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_change_image"
        android:layout_alignStart="@+id/setting_change_image"
        android:layout_alignLeft="@+id/setting_change_image"
        android:layout_marginTop="14dp"
        android:background="@android:color/holo_orange_dark"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="CHANGE STATUS" />

</RelativeLayout>